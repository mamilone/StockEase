<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="managerlogin.css">
    <title>Manager</title>
</head>
<body>
    <header>
        <h3 id="btnNav">
            STOCK EASE
        </h3>
        <form action="logout" method="POST">
            <button type="submit" class="btn btn-danger logout">Logout</button>
        </form>
    </header>
    <nav class="navi">
        <div class="navi__links">
            <a href="mwarehouse" class="navi__link">
                <i class="material-icons">warehouse</i>
                Warehouse
            </a>
            <a  class="navi__link" href="mrestock">
                <i class="material-icons">add_business</i>
                Restock
            </a>
            <a href="mshipment" class="navi__link navi__link--active">
                <i class="material-icons">shopping_cart</i>
                Shipment
            </a>
            <a href="mproducts" class="navi__link">
                <i class="material-icons">inventory</i>
                Products
            </a>
            <a href="mainmanager" class="navi__link">
                <i class="material-icons">account_circle</i>
                Profile
            </a>
        </div>
    </nav>
    <form action="checkAll" method="post">
    <div class="a1">
        <h2>Product Type</h2>
        <div class="input-group mb-3">
            <select name="ptype" type="submit" class="form-select" id="inputGroupSelect02">
                <option selected>choose..</option>
                <% if(tresult.length > 0) {%>
                    <% tresult.forEach((tresult, index) =>{ %>
                        <option name="ptype" value="<%= tresult.type %>"><%= tresult.type %></option>
                    <% }) %>
                <% } %>
            </select>
        </div>
    </div>
    <div class="a2">
        <h2>Product Name</h2>
        <div class="input-group mb-3">
            <select name="pname" class="form-select" type="submit" id="inputGroupSelect02">
                <option selected>choose..</option>
                <% if(presult.length > 0) {%>
                    <% presult.forEach((presult, index) =>{ %>
                        <% if(presult.product_name != '') { %>
                            <option name="ptype" value="<%= presult.name %>"><%= presult.name %></option>
                        <% } %>
                    <% }) %>
                <% } %>
            </select>
        </div>
    </div>
    <div class="a3">
        <h2>Quantity</h2>
        <div class="input-group mb-3">
            <input type="number" max="" class="form-control" name="pcount">
        </div>
    </div>
    <div class="ship">
    <button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><span></span>SHIP</button>
   </div>
   <div class="status">
       <% if(shipMSG != '') { %>
        <% if(shipMSG == 'Success') { %>
            <h5 class="text-center text-success">Items Shipped Successfully!</h5>
        <% } else if (shipMSG == 'Failure') { %>
            <h5 class="text-center text-danger">Enter a Correct Quantity!!</h5>
        <% } else if(shipMSG == 'MatchFail') { %>
            <h5 class="text-center text-danger">Enter proper Item Details!</h5>
        <% } %>
       <% } %>
   </div>
</form>
</body>
</html>