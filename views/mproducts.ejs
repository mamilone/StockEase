<div class="productadmin">
    <h1>PRODUCT INFORMATION</h1>
    <!-- <div class="ptable"> -->
        <table class="table table-light">
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Name</th>
                    <th>Product Type</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(rlength > 0) { %>
                <% results.forEach((results, index) => { %>
                <tr>
                    <td><%= results.id %></td>
                    <td><%= results.name %></td>
                    <td><%= results.type %></td>
                    <td><form action="authdelete" method="POST">
                        <input value = "<%= results.id%>" type="text" name = "pid" class = "input-field">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form></td>                    
                </tr>
                <% }) %>
                <%} else {%>
                    <td>No Products present</td>
                <% } %>
            </tbody>
        </table>
        <button class="add"><span></span>ADD PRODUCT</button>
    <!-- </div> -->
</div>
