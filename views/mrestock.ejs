    </nav>
    <div class="a1">
        <h2>Product Type</h2>
        <div class="input-group mb-3">
            <select name="ptype" class="form-select" id="inputGroupSelect02">
                <option selected>Choose...</option>
                <option name="ptype" value="chaddi">chaddi</option>
            </select>
        </div>
    </div>
    <div class="a2">
        <h2>Product Name</h2>
        <div class="input-group mb-3">
            <select name="ntype" class="form-select" id="inputGroupSelect02">
                <option selected>Choose...</option>
                <option name="ntype" value="aimon ki chaddi">aimon ki chaddi</option>
            </select>
        </div>
    </div>
    <div class="a3">
        <h2>Quantity</h2>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Number of products" name="usrname">
        </div>
    </div>
    <div class="butt">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><span></span>ADD TO WAREHOUSE</button>
    </div>
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
           <div class="modal-content">
               <form action="addProduct" method="post">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">Add a Product</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5>Product Name:</h5>
                <div class="input-group input-group-sm mb-3">
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="pname" placeholder="e.g. dove soap etc">
                  </div>
                <h5>Product Type</h5>
                <div class="input-group mb-3">
                    <select name="ptype" class="form-select" id="inputGroupSelect02">
                      <option selected>Choose...</option>
                      <option name="ptype" value="chaddi">chaddi</option>
                    </select>
                </div>
                <h5>Quantity</h5>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Number of products" name="usrname">
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
          </div>
        </div>
    </div>
