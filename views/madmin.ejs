            </a>
        </div>
        <div class="navi__overlay"></div>
    </nav>
    <div class="manageradmin">
        <h1>MANAGER INFORMATION</h1>
        <table class="table table-light">
            <thead>
                <tr>
                    <th>Manager Id</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(rlength > 0) { %>
                    <% result.forEach((result, index) => { %>
                    <tr>
                        <td><%= result.id %></td>
                        <td><%= result.name %></td>
                        <td><%= result.username %></td>
                        <td><%= result.email_id %></td>
                        <td><form action="authdelete" method="POST">
                            <input value = "<%= result.id%>" type="text" name = "manid" class = "input-field">
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form></td>
                    </tr>
                    <% }) %>
                    <%} else {%>
                        <td>No Managers present</td>
                    <% } %>
            </tbody>
        </table>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Manager</button>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              This is a modal body
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
