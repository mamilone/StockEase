<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="homeadmin.css">
    <title>Admin: Stock-Ease</title>
</head>
<body>
    <div class="wrap">
        <div class="bg"></div>
        <div class="bg1"></div>
        <div class="content">
            <header>
                <h3 id="btnNav">
                    STOCK EASE
                </h3>
                <form action="logout" method="POST">
                    <button type="submit" class="btn btn-danger logout">Logout</button>
                </form>
            </header>
            <nav class="navi">
                <div class="navi__links">
                    <a href="logsadmin" class="navi__link">
                        <i class="material-icons">description</i>
                        Logs
                    </a>
                    <a  class="navi__link" href="secadmin">
                        <i class="material-icons">dns</i>
                        Sections
                    </a>
                    <a href="madmin" class="navi__link navi__link--active">
                        <i class="material-icons">people</i>
                        Manager
                    </a>
                    <a href="mainadmin" class="navi__link">
                        <i class="material-icons">person</i>
                        Profile
                    </a>
                    <a href="verifymadmin" class="navi__link">
                        <i class="material-icons">verified</i>
                        Manager Authentication
                    </a>
                </div>
            </nav>
            <div class="manageradmin">
                <h1>MANAGER INFORMATION</h1>
                <table class="table table-light">
                    <thead>
                        <tr>
                            <th>Manager Id</th>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Email Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(rlength > 0) { %>
                            <% result.forEach((result, index) => { %>
                            <tr>
                                <td><%= result.id %></td>
                                <td><%= result.name %></td>
                                <td><%= result.username %></td>
                                <td><%= result.email_id %></td>
                                <td><form action="delManager" method="POST">
                                    <input value = "<%= result.id%>" type="text" name = "manid" class = "input-field">
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                </form></td>
                            </tr>
                            <% }) %>
                        <%} else {%>
                            <td>No Managers present</td>
                        <% } %>
                    </tbody>
                </table>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Add Manager</button>
            </div>

            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <form action="addManager" method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">Add a Manager</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h5>Name:</h5>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="mname" placeholder="e.g. Seth Macfarlane">
                                </div>
                                <h5>Username:</h5>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="muname" placeholder="Enter a Unique Username">
                                </div>
                                <h5>Email ID:</h5>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="email" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="memail" placeholder="e.g. abc@gmail.com">
                                </div>
                                <h5>Password:</h5>
                                <div class="input-group input-group-sm mb-3">
                                    <input type="password" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="mpass" placeholder="Enter Password">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
      </div>
    </div>
</body>
</html>