<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="homeadmin.css">
    <title>Stock-Ease: Manager-Authentication</title>
</head>
<body>
    <div class="wrap">
        <div class="bg"></div>
        <div class="bg1"></div>
        <div class="content">
            <header>
                <h3 id="btnNav">
                STOCK EASE
                </h3>
                <form action="logout" method="POST">
                    <button type="submit" class="btn btn-danger logout">Logout</button>
                </form>
            </header>
            <nav class="navi">
                <div class="navi__links">
                    <a href="logsadmin" class="navi__link">
                        <i class="material-icons">description</i>
                        Logs
                    </a>
                    <a  class="navi__link" href="secadmin">
                        <i class="material-icons">dns</i>
                        Sections
                    </a>
                    <a href="madmin" class="navi__link">
                        <i class="material-icons">people</i>
                        Manager
                    </a>
                    <a href="mainadmin" class="navi__link">
                        <i class="material-icons">person</i>
                        Profile
                    </a>
                    <a href="verifymadmin" class="navi__link navi__link--active">
                        <i class="material-icons">verified</i>
                        Manager Authentication
                    </a>
                </div>
            </nav>
            <div class="manageradmin">
                <h2>Manager Authentication</h2>
                <table class="table table-light">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Email Id</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(verifyMSG == '') { %>
                            <% if(results.length > 0) {%> 
                                <% results.forEach((results, index) => { %>
                                    <tr>
                                        <td><%= results.name %> </td>
                                        <td><%= results.username %> </td>
                                        <td><%= results.email_id %> </td>
                                        <td>
                                            <form action="verifyman" method="post">
                                                <input value="<%= results.username %>" type="text" name="manuname" class="input-field">
                                                <button type="button submit" class="btn btn-primary">Verify</button>
                                            </form>
                                            <form action="remvman" method="post">
                                                <input value = "<%= results.username %>" type="text" name="manuname" class="input-field">
                                                <button type="button submit" class="btn btn-danger">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %> 
                            <% } %>  
                        <% } else if(verifyMSG == 'Empty') {%>
                                <h4 class="status">No Managers Waiting for Authentication</h4>
                        <% } %> 
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>