    <div class="productadmin">
        <h1>SECTIONS</h1>
        <!-- <div class="ptable"> -->
            <table class="table table-light">
                <thead>
                    <tr>
                        <th>Section ID</th>
                        <th>Name</th>
                        <th>Product Type</th>
                        <th>Shelf count</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(rlength > 0) { %>
                    <% results.forEach((results, index) => { %>
                    <tr>
                        <td><%= results.id %></td>
                        <td><%= results.name %></td>
                        <td><%= results.product_type %></td>
                        <td><%= results.cat_count %></td>
                        <td><form action="authdelete" method="POST">
                            <input value = "<%= results.id%>" type="text" name = "secID" class = "input-field">
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form></td>                    
                    </tr>
                    <% }) %>
                    <%} else {%>
                        <td>No Sections present</td>
                    <% } %>
                </tbody>
            </table>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Add Section</button>
        <!-- </div> -->
    </div>
      
      <!-- Modal -->
      <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
           <div class="modal-content">
               <form action="addSection" method="post">
            <div class="modal-header">
              <h5 class="modal-title" id="staticBackdropLabel">Add a Section</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5>Section Name:</h5>
                <div class="input-group input-group-sm mb-3">
                    <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="sname" placeholder="e.g. A, B, C">
                  </div>
                <h5>Product Type</h5>
                <div class="input-group mb-3">
                    <select name="stype" class="form-select" id="inputGroupSelect02">
                      <option selected>Choose...</option>
                      <% if(rlength > 0) { %>
                        <% results.forEach((results, index) => { %>
                      <option name="stype" value="<%= results.product_type %>"><%=results.product_type%></option>
                      <% }) %>
                      <% } %>
                    </select>
                </div>
                <br>
                <h5>Shelf Count:</h5>
                <div class="input-group input-group-sm mb-3">
                    <input type="number" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="scount">
                </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
          </div>
        </div>
      </div>
