<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="homeadmin.css">
    <title>Admin: Stock-Ease</title>
</head>
<body>
    <header>
        <h3 id="btnNav">
           STOCK EASE
        </h3>
    </header>
    <nav class="navi">
        <div class="navi__links">
            <a href="logsadmin" class="navi__link">
                <i class="material-icons">description</i>
                Logs
            </a>
            <a  class="navi__link navi__link--active" href="secadmin">
                <i class="material-icons">dns</i>
                Sections
            </a>
            <a href="madmin" class="navi__link">
                <i class="material-icons">people</i>
                Manager
            </a>
            <a href="sadmin" class="navi__link">
                <i class="material-icons">drafts</i>
                Suggestions
            </a>
            <a href="mainadmin" class="navi__link">
                <i class="material-icons">person</i>
                Profile
            </a>
        </div>
        <div class="navi__overlay"></div>
    </nav>
    <!-- from here------------------------------------------------- -->
    <div class="productadmin">
        <h1>SECTIONS</h1>
        <!-- <div class="ptable"> -->
            <table class="table table-light">
                <thead>
                    <tr>
                        <th>Section ID</th>
                        <th>Name</th>
                        <th>Product Type</th>
                        <th>Shelf count</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(rlength > 0) { %>
                    <% results.forEach((results, index) => { %>
                    <tr>
                        <td><%= results.id %></td>
                        <td><%= results.name %></td>
                        <td><%= results.product_type %></td>
                        <td><%= results.cat_count %></td>
                        <td><form action="authdelete" method="POST">
                            <input value = "<%= results.id%>" type="text" name = "secID" class = "input-field">
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form></td>                    
                    </tr>
                    <% }) %>
                    <%} else {%>
                        <td>No Sections present</td>
                    <% } %>
                </tbody>
            </table>
            <button class="btn btn-primary"><span></span>Add Section</button>
        <!-- </div> -->
    </div>
    <!-- til here____------------------------------------------------ -->
</body>
</html>